        <!--         <GridView> -->
        <!--             <GridViewColumn  -->
        <!--                             Header="Name"  -->
        <!--                             DisplayMemberBinding="{Binding Path=Name}" Width="80"/> -->
        <!-- -->
        <!--             <GridViewColumn  -->
        <!--                             Header="Last name"  -->
        <!--                             DisplayMemberBinding="{Binding Path=LastName}"  -->
        <!--                             Width="120"/> -->
        <!--         </GridView> -->
        <!--     </ListView.View> -->
        <!-- </ListView> -->

    </Grid>
</Window>
